{namespace site.block}
/**
 * @param url
 * @param content
 * @param title
 * @param position
 */
{template .smallvideo}
  <article class="core9-block smallvideo {$position}" data-type="smallvideo">
    <div>
      <iframe width="100%" height="315" src="{$url}" frameborder="0" allowfullscreen></iframe>
      <h1>{$title}</h1>
      {$content|noAutoescape}
    </div>
  </article>
{/template}