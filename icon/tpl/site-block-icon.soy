{namespace site.block}
/**
 * Says hello to the world.
 * @param categories
 * @param icon
 * @param txt
 * @param num
 * @param width
 * @param height
 * @param title
 * @param background
 */
{template .icon}

{let $url}

{/let}

<div class="mega-entry {$categories} sign block" data-type="icon" data-src="http://kennispark.docker.trimm.net/jaarplan-nieuw/svg-generator.php?img={$icon}&amp;txt={$txt}&amp;num={$num}" data-width="{$width}" data-height="{$height}">
  <div class="mega-covercaption mega-square-top mega-landscape-bottom mega-portrait-bottom">
      <div class="mega-title">{$title}</div>
          <p>&nbsp;</p>
        </div>
        <a class="fancybox" id="one" rel="group" href="http:/kennispark.docker.trimm.net/jaarplan-nieuw/svg-generator.php?img={$icon}&amp;txt={$txt|escapeUri}&amp;num={$num}" title="{$title}" data-bkgrnd="{$background}">
          <div class="mega-hover">
            <div class="mega-hoverview"></div>
          </div>
        </a>
      </div>
{/template}
